<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.SettingsController">
    <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>

    <Label style="-fx-font-weight: bold; -fx-font-size: 22;" text="System Settings" />

    <VBox spacing="10.0" style="-fx-border-color: #ecf0f1; -fx-border-width: 0 0 2 0; -fx-padding: 0 0 20 0;">
        <Label style="-fx-font-weight: bold;" text="Configure At-Risk Threshold" />
        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <Label text="GPA Threshold:" />
            <TextField fx:id="txtGpaThreshold" prefWidth="80.0" />
            <Button onAction="#handleSaveThreshold" style="-fx-background-color: #2c3e50; -fx-text-fill: white;" text="Update Threshold" />
        </HBox>
    </VBox>

    <VBox spacing="10.0" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-weight: bold;" text="Manage Programme List" />
        <HBox spacing="10.0">
            <TextField fx:id="txtNewProgramme" promptText="Enter new programme name..." HBox.hgrow="ALWAYS" />
            <Button onAction="#handleAddProgramme" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add" />
        </HBox>
        <ListView fx:id="listProgrammes" VBox.vgrow="ALWAYS" />
    </VBox>
</VBox>
