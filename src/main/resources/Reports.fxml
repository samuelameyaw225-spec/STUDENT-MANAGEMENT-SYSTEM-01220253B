<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="600.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ReportsController">

    <Tab text="Top Performers">
        <VBox spacing="10.0">
            <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Filter by:" />
                <ComboBox fx:id="cmbTopProgramme" promptText="All Programmes" />
                <ComboBox fx:id="cmbTopLevel" promptText="All Levels" />
                <Button text="Apply Filters" onAction="#loadTopPerformers" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Export to CSV" onAction="#exportTopPerformers" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            </HBox>
            <TableView fx:id="tableTop" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTopId" text="Student ID" prefWidth="100.0"/>
                    <TableColumn fx:id="colTopName" text="Full Name" prefWidth="200.0"/>
                    <TableColumn fx:id="colTopProg" text="Programme" prefWidth="150.0"/>
                    <TableColumn fx:id="colTopLevel" text="Level" />
                    <TableColumn fx:id="colTopGpa" text="GPA" />
                </columns>
            </TableView>
        </VBox>
    </Tab>

    <Tab text="At-Risk Students">
        <VBox spacing="10.0">
            <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="GPA Threshold:" />
                <TextField fx:id="txtRiskThreshold" text="2.0" prefWidth="60.0" />
                <Button text="Refresh List" onAction="#loadAtRiskStudents" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="Export to CSV" onAction="#exportAtRiskStudents" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
            </HBox>
            <TableView fx:id="tableRisk" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colRiskId" text="Student ID" prefWidth="100.0"/>
                    <TableColumn fx:id="colRiskName" text="Full Name" prefWidth="200.0"/>
                    <TableColumn fx:id="colRiskProg" text="Programme" prefWidth="150.0"/>
                    <TableColumn fx:id="colRiskLevel" text="Level" />
                    <TableColumn fx:id="colRiskGpa" text="GPA" />
                </columns>
            </TableView>
        </VBox>
    </Tab>

    <Tab text="System Summaries">
        <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
            <VBox spacing="10.0">
                <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
                <Label text="GPA Distribution"><font><Font name="System Bold" size="16.0" /></font></Label>
                <ListView fx:id="listGpaDist" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox spacing="10.0">
                <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
                <Label text="Programme Summary"><font><Font name="System Bold" size="16.0" /></font></Label>
                <ListView fx:id="listProgSummary" VBox.vgrow="ALWAYS" />
            </VBox>
        </SplitPane>
    </Tab>
</TabPane>