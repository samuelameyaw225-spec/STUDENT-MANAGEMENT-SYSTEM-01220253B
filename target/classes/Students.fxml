<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.7" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.StudentsController">
    <VBox spacing="10.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <HBox spacing="10.0" alignment="CENTER_LEFT">
            <TextField fx:id="txtSearch" promptText="Search ID or Name..." prefWidth="200.0"/>
            <ComboBox fx:id="cmbFilterProgramme" promptText="Programme"/>
            <ComboBox fx:id="cmbFilterLevel" promptText="Level"/>
            <ComboBox fx:id="cmbFilterStatus" promptText="Status"/>
            <Button text="Clear" onAction="#handleClearFilters"/>
        </HBox>
        <TableView fx:id="tableStudents" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" text="Student ID" />
                <TableColumn fx:id="colName" text="Full Name" prefWidth="150.0"/>
                <TableColumn fx:id="colProgramme" text="Programme" />
                <TableColumn fx:id="colLevel" text="Level" />
                <TableColumn fx:id="colGpa" text="GPA" />
                <TableColumn fx:id="colEmail" text="Email" />
                <TableColumn fx:id="phoneNumber" text="Phone Number" />
                <TableColumn fx:id="dateAdded" text="Date added" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
        </TableView>
        <HBox spacing="10.0">
            <Button text="Delete Selected" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button text="Refresh Table" onAction="#loadStudents"/>
        </HBox>
    </VBox>

    <VBox spacing="10.0" style="-fx-background-color: #f8f9fa;">
        <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>
        <Label text="Student Details">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <TextField fx:id="txtId" promptText="Student ID (4-20 chars)" />
        <TextField fx:id="txtName" promptText="Full Name" />
        <TextField fx:id="txtProgramme" promptText="Programme" />
        <ComboBox fx:id="cmbLevel" promptText="Select Level" maxWidth="Infinity"/>
        <TextField fx:id="txtGpa" promptText="GPA (0.0 - 4.0)" />
        <TextField fx:id="txtEmail" promptText="Email" />
        <TextField fx:id="txtPhone" promptText="Phone Number" />
        <ComboBox fx:id="cmbStatus" promptText="Status" maxWidth="Infinity"/>

        <HBox spacing="10.0" alignment="CENTER">
            <Button text="Save / Add" onAction="#handleSave" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            <Button text="Clear Form" onAction="#clearForm" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</SplitPane>